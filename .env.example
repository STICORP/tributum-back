# Application settings
APP_NAME=Tributum
APP_VERSION=0.3.0
ENVIRONMENT=development
DEBUG=true

# API settings
API_HOST=127.0.0.1
API_PORT=8000
# For Docker/Cloud Run deployments:
# API_HOST=0.0.0.0
# API_PORT=${PORT:-8080}  # Cloud Run sets PORT env var
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
# To disable docs in production, set these to empty:
# DOCS_URL=
# REDOC_URL=
# OPENAPI_URL=

# Logging
LOG_CONFIG__LOG_LEVEL=INFO
LOG_CONFIG__LOG_FORMAT=console

# Database Configuration
DATABASE_CONFIG__DATABASE_URL=postgresql+asyncpg://tributum:tributum_pass@localhost:5432/tributum_db
DATABASE_CONFIG__POOL_SIZE=10
DATABASE_CONFIG__MAX_OVERFLOW=5
DATABASE_CONFIG__POOL_TIMEOUT=30.0
DATABASE_CONFIG__POOL_PRE_PING=true
DATABASE_CONFIG__ECHO=false

# Observability (optional)
# OBSERVABILITY_CONFIG__ENABLE_TRACING=false
# OBSERVABILITY_CONFIG__GCP_PROJECT_ID=your-project
# OBSERVABILITY_CONFIG__TRACE_SAMPLE_RATE=0.1
